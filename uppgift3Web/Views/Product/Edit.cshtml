

@{
    ViewData["Title"] = "Home Page"; 
}
@model Product

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <h2 class="text-primary">Edit Course</h2>
<form asp-controller="Product" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="form-label mt-4"></label>
                <input asp-for="Name" class="form-control" type="text">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Description" class="form-label mt-4"></label>
                <textarea asp-for="Description" class="form-control" id="exampleTextarea" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            
            </div>

            <div class="form-group">
                <label asp-for="Price" class="form-label mt-4"></label>
                <input asp-for="Price" class="form-control" type="text">
                <span asp-validation-for="Price" class="text-danger"></span>

            </div>

        </fieldset>

                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">Back to List</a>

                <button type="submit" class="btn btn-primary m-4">Update</button>
</form>   
</body>
</html>

@section scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}

